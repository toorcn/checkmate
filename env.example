# INSTRUCTION: To use this configuration, rename this file from 'env.example' to '.env.local'
# ===========================
# General Configuration
# ===========================

# Secrets Manager Control
# Set to 'false' for local development (uses .env.local)
# Set to 'true' for production (uses AWS Secrets Manager)
USE_SECRETS_MANAGER="false"

# Generate a secure random string for authentication
# In production: stored in AWS Secrets Manager (checkmate-dev/auth_secret)
AUTH_SECRET="your-secure-auth-secret-here"
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="your-admin-password"

# ===========================
# Database (Postgres)
# ===========================

# OPTION A: Full connection string (easiest for local dev)
DATABASE_URL="postgres://username:password@your-db-host:5432/your-database-name"

# OPTION B: Component-based (for Secrets Manager approach in production)
# In production: username/password fetched from AWS Secrets Manager
# In local dev: set DATABASE_URL instead, or set all these variables
# DB_HOST="checkmate-db-instance.c2f2oys8o2re.us-east-1.rds.amazonaws.com"
# DB_PORT="5432"
# DB_NAME="checkmate"
# DB_USER="postgres"  # Only for drizzle migrations with component approach
# DB_PASSWORD="your-password"  # Only for drizzle migrations with component approach

# ===========================
# API Keys
# ===========================
# In production: stored in AWS Secrets Manager
# - checkmate-dev/firecrawl_api_key
# - checkmate-dev/exa_api_key

# Firecrawl API Key - Get from https://firecrawl.dev
FIRECRAWL_API_KEY="your-firecrawl-api-key"

# EXA API Key - Get from https://exa.ai
EXA_API_KEY="your-exa-api-key"

# ===========================
# App URLs & IDs
# ===========================

# Better Auth URL - Should match your app's URL
BETTER_AUTH_URL="http://localhost:3000"

# AWS Bedrock Model Configuration
BEDROCK_MODEL_ID="us.amazon.nova-lite-v1:0"
# BEDROCK_MODEL_ID="amazon.nova-pro-v1:0"
BEDROCK_INFERENCE_PROFILE_ARN="arn:aws:bedrock:us-east-1:YOUR_ACCOUNT_ID:inference-profile/us.amazon.nova-pro-v1:0"

# ===========================
# AWS S3
# ===========================

S3_BUCKET="your-s3-bucket-name"

# ===========================
# AWS Credentials
# ===========================

APP_REGION="us-east-1"
APP_ACCESS_KEY_ID="your-aws-access-key-id"
APP_SECRET_ACCESS_KEY="your-aws-secret-access-key"

# ===========================
# Redis (Amazon ElastiCache)
# ===========================
# Connection details in environment variables (non-sensitive)
# Password stored in AWS Secrets Manager (checkmate-dev/redis_password) in production

REDIS_MODE="single"
REDIS_HOST="your-redis-host"
REDIS_PORT="6379"
REDIS_USERNAME="default"
REDIS_PASSWORD="your-redis-password"  # Only for local dev
REDIS_TLS="true"
REDIS_KEY_PREFIX="cm:"